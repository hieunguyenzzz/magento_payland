<?xml version="1.0"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">

    <route url="/V1/paylandpaymenturl" method="GET">
        <service class="Hieu\Payland\Api\PaylandTokenResolverInterface" method="resolve"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>

    <route url="/V1/processorder" method="POST">
        <service class="Hieu\Payland\Api\PaylandOrderProcesserInterface" method="process"/>
        <resources>
            <resource ref="anonymous" />
        </resources>
    </route>
</routes>